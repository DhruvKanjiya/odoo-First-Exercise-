<?xml version="1.0" encoding="UTF-8"?>
<odoo>



    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree default_order="price desc" decoration-danger="status == 'refused'"
              decoration-success="status == 'accepted'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="property_type_id"/>
                 <button name="action_accept" type="object" icon="fa-check"
                            string="Accept" class="btn-primary"
                            invisible="status == 'accepted' or status == 'refused'"/>
                <button name="action_refuse" type="object" icon="fa-times"
                            string="Refuse" class="btn-primary"
                            invisible="status == 'accepted' or status == 'refused'"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <header>
                                        <!-- Buttons to accept or refuse the offer, visible based on offer status -->
                    <button name="action_accept" string="Accept" type="object"
                            icon="fa-check" class="btn-primary" invisible="status == 'accepted' or status == 'refused'"/>
                    <button name="action_refuse" string="Refuse" type="object"
                            icon="fa-times" class="btn-secondary" invisible="status == 'accepted' or status == 'refused'"/>
                </header>

                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>